<div class="welcome_form">
  <h1>Welcome to Cheetah Run! Please sign in below:</h1><br>
  <%= form_for @user, url: login_path, method: :post do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "log in" %><br><br>
    <h1>Or Sign up and join the pride! <%= link_to(controller: 'users', action: 'new') { 'sign up' } %></h1>
  <% end %>
</div>
