<div class="category_breakdown">
  <h1>Claim a Task Based On a Category</h1><br><br>
  <% @categories.each do |category| %>
    <h3><%= category.name %></h3><br>
      <ul>
        <% if category.open_tasks.empty? %>
          <li>No tasks currently available</li>
        <% else %>
          <% category.open_tasks.each do |task| %>
            <li><%= link_to task.title, task_path(task) %></li>
          <% end %>
        <% end %>
      </ul>
  <% end %>
</div>
