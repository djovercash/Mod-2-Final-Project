<div class="mainSection">
  <div class="create_task_form">
    <h1>Create a task</h1><br>
    <%= render 'errors/error_messages' %>
    <%= form_for @task, controller: 'tasks', action: 'create' do |f| %>
      <div class="form-group">
        <%= f.label :title, "Task Title: " %>
        <%= f.text_field :title %><br>
      </div>

      <div class="form-group">
        <%= f.label :description, "Task Description: " %>
        <%= f.text_field :description %><br>
      </div>

      <div class="form-group">
        <%= f.label :address, "Address: " %>
        <%= f.text_field :address, placeholder: "Address or Location" %><br>
      </div>

      <div class="form-group">
        <%= f.label :cheetah_points, "Cheetah Point Value: " %>
        <%= f.text_field :cheetah_points %><br>
      </div>
        <%= f.hidden_field :snake_id, :value => session[:user_id] %>

      <div class="form-group">
        <%= f.label "Select Categories:" %><br>
          <%= f.collection_check_boxes(:category_ids, @categories, :id, :name) do |b|  %>
              <%= b.label class:"label-checkbox" do%>
               <%=b.check_box + b.text%> <br>
              <%end%>
          <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "Send to the Cheetahs" %>
      </div>
    <% end %>
  </div>
</div>
