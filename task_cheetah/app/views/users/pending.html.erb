<div class="mainSection">
  <div class="pending_task_breakdown">
    <h1>Here are all the pending tasks:</h1>
      <% @pending_task.each do |completed_task| %>
        <li class="task_title"><%= link_to truncate(completed_task.title, :length => 20), task_path(completed_task) %>
          <% if completed_task.claim_check %>
            | Claimed by: <%= completed_task.name_check%>
          <% end %>
          <ul>
            <li class="task_detail">(Created: <%= completed_task.created_at.strftime("%B %-d, %Y") %>)</li>
          </ul>
        </li>
      <% end %>
