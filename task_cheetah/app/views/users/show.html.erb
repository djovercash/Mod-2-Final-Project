<div class="user_show">
  <h1>Welcome back, <%= @user.name %></h1>
  <div class="user_options">
    <%= button_to "Create a Task", new_task_path, method: :get %>
    <%= button_to "Claim a Task", categories_path, method: :get %>
    <%= button_to "Edit Your Info", edit_user_path(@user), method: :get %>
    <%= button_to "Logout", logout_path %>
  </div>

  <br>
  <div class="user_show_boxes">
    <div class="user_show_box">
      <h2>Claimed Tasks</h2>
        <ul>
          <% if @user_claim.empty? %>
            <li class="task_title">No Current Tasks Pending</li>
          <% else %>
            <% @user_claim.each do |completed_task| %>
              <li class="task_title"><%= link_to completed_task.title, task_path(completed_task) %></li>
                <ul>
                  <li class="task_detail">(Created: <%= completed_task.created_at.strftime("%B %-d, %Y") %>)</li>
                </ul>
            <% end %>
          <% end %>
        </ul>
    </div>

    <br><br>

    <div class="user_show_box">
      <h2>Pending Tasks</h2>
        <ul>
          <% if @pending_task.empty? %>
            <li class="task_title">No Current Tasks Pending</li>
          <% else %>
            <% @pending_task.each do |completed_task| %>
              <li class="task_title"><%= link_to completed_task.title, task_path(completed_task) %>
                <% if completed_task.claim_check %>
                  | Claimed by: <%= completed_task.name_check%>
                <% end %>
              </li>
                <ul>
                  <li class="task_detail">(Created: <%= completed_task.created_at.strftime("%B %-d, %Y") %>)</li>
                </ul>
              <% end %>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="user_show_boxes">
      <div class="user_show_box">
        <h2>Review Tasks</h2>
          <ul>
            <% if @review_task.empty? %>
              <li class="task_title">No Tasks to Review</li>
            <% else %>
              <% @review_task.each do |completed_task| %>
                <li class="task_title"><%= link_to completed_task.title, task_path(completed_task) %></li>
              <% end %>
            <% end %>
          </ul>
      </div>

      <br><br>

      <div class="user_show_box">
        <h2>Cheetah Status</h2>
          <% if @cheetah_status == "Complete tasks to earn Cheetah Points" %>
            <%= @cheetah_status %>
          <% else %>
            Cheetah Status: <%= @cheetah_status[0] %><br>
            Cheetah Rating: <%= @cheetah_status[1] %>
          <% end %><br>
          Points: <%= @user.cheetah_points %>
      </div>
    </div>

</div>
