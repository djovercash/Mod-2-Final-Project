<div class="new_user_form">
  <h1>Become a Cheetah and join the fastest trend in task sharing</h1><br>
  <%= form_for @user, controller: 'users', action: 'create' do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %><br>

    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, "Password Confirmation: " %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Become a Cheetah" %>
  <% end %>
</div>
