<div class="mainSection">
  <div class="new_user_form">
    <h1>Become a Cheetah and join the fastest task sharing community today</h1><br>
    <%= render "errors/error_messages" %>
    <%= form_for @user, controller: 'users', action: 'create' do |f| %>
      <div class="form-group">
        <h3><%= f.label :name, "Name:" %></h3>
        <%= f.text_field :name %><br>
      </div>

      <div class="form-group">
        <h3><%= f.label :username, "Username:" %></h3>
        <%= f.text_field :username %><br>
      </div>

      <div class="form-group">
        <h3><%= f.label :password, "Password:" %></h3>
        <%= f.password_field :password %><br>
      </div>

      <div class="form-group">
        <h3><%= f.label :password_confirmation, "Password Confirmation:" %></h3>
        <%= f.password_field :password_confirmation %><br><br>
      </div>

      <div class="form-group">
        <%= f.submit "Become a Cheetah", :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>
