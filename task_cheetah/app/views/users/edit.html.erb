<div class="mainSection">
  <div class="edit_user_form">
    <h1>Update your Cheetah</h1><br>
    <%= form_for @user, controller: 'users', action: 'create' do |f| %>
    <div class="form-group">
      <h3><%= f.label :name, "Name:" %></h3>
      <%= f.text_field :name %><br>
    </div>

      <div class="form-group">
        <h3><%= f.label :username, "Username:" %></h3>
        <%= f.text_field :username %><br>
      </div>

      <div class="form-group">
        <h3><%= f.label :password, "Password:" %></h3>
        <%= f.password_field :password %><br>
      </div>

      <div class="form-group">
        <h3><%= f.label :password_confirmation, "Password Confirmation:" %></h3>
        <%= f.password_field :password_confirmation %><br><br>
      </div>

      <div class="user_buttons">
        <%= f.submit "Update a Cheetah", :class => "btn" %>
    <% end %>
    <%= button_to "Delete Account", @user, method: :delete, :class => "btn_delete" %>
    </div>
  </div>
</div>
