<div class="mainSection">
  <div class="edit_user_form">
    <h1>Update your Cheetah</h1><br>
    <%= form_for @user, controller: 'users', action: 'create' do |f| %>
      <%= f.label :name, "Name: " %>
      <%= f.text_field :name %><br>

      <%= f.label :username, "Username: " %>
      <%= f.text_field :username %><br>

      <%= f.label :password, "Password: " %>
      <%= f.password_field :password %><br>

      <%= f.label :password_confirmation, "Password Confirmation: " %>
      <%= f.password_field :password_confirmation %><br><br>

      <%= f.submit "Update Cheetah" %>
    <% end %>
  </div>
  <%= button_to "Delete Account", @user, method: :delete %>
</div>
